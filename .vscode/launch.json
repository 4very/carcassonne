  "version": "0.2.0",
  "configurations": [
    {
      "type": "node",
      "request": "launch",
      "name": "Frontend",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "yarn",
      "runtimeArgs": [
        "dev",
        "--port",
        "3000"
      ],
      "console": "internalConsole"
    },
    {
      "type": "node",
      "request": "launch",
      "name": "Tailwind Config Viewer",
      "cwd": "${workspaceFolder}",
      "runtimeExecutable": "yarn",
      "runtimeArgs": [
        "tailwind-viewer",
        "--port",
        "3001"
      ],
      "console": "internalConsole"
    }
  ]
}